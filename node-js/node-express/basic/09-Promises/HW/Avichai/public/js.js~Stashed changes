async function first(firstNumber) {
    let number = 0;
    await fetch('/first', {
        method: 'post',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ firstNumber })
    }).then(r => r.json())
        .then(data => {
            number = data.number;
            // console.log(data)
        })
        .catch(e => {
            reject(e)
        })
    return number;
}
